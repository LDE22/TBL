<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TBL.Views.RepairPassPage">
    <VerticalStackLayout Padding="30" Spacing="20" BackgroundColor="White">
        <Label Text="Восстановление пароля" FontSize="28" HorizontalOptions="Center" TextColor="Black" />
        <Frame BackgroundColor="LightGray" CornerRadius="20" Padding="20" WidthRequest="300" HorizontalOptions="Center">
            <VerticalStackLayout Spacing="15">
                <Label x:Name="InstructionLabel" Text="Укажите email для восстановления доступа" FontSize="14" TextColor="Black" HorizontalOptions="Center" />
                <Entry x:Name="EmailEntry" Placeholder="Введите ваш email" BackgroundColor="Transparent" TextColor="Black" PlaceholderColor="DarkGray" />
            </VerticalStackLayout>
        </Frame>
        <Button x:Name="ActionButton" Text="Отправить" BackgroundColor="Black" TextColor="White" CornerRadius="10" Clicked="OnActionButtonClicked" />
    </VerticalStackLayout>
</ContentPage>
