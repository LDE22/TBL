<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TBL.Views.SpecialistProfilePage">
    <VerticalStackLayout Padding="20" Spacing="10">
        <!-- Заголовок -->
        <Label Text="Редактирование профиля" FontSize="24" HorizontalOptions="Center" />

        <!-- Фото профиля -->
        <Image x:Name="ProfileImage" Source="{Binding Photo}" HeightRequest="100" WidthRequest="100" HorizontalOptions="Center" />
        <Button Text="Изменить фото" BackgroundColor="Transparent" BorderColor="Transparent" TextColor="White" Clicked="OnChangePhotoClicked" />

        <!-- Поле для описания -->
        <Editor Placeholder="Описание"
                HeightRequest="80" />

        <!-- Поля для редактирования данных -->
        <Entry Placeholder="@link_to_profile" />
        <Entry Placeholder="Имя" />
        <Entry Placeholder="Стаж" />
        <Entry Placeholder="Город" />
        <Entry Placeholder="Поменять Пароль" IsPassword="True" />

        <!-- Кнопка удаления аккаунта -->
        <Button Text="Удалить аккаунт" BackgroundColor="Red" TextColor="White" Clicked="OnDeleteAccountClicked" />
    </VerticalStackLayout>
</ContentPage>
