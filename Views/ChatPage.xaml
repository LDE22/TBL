<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TBL.Views.ChatPage"
             Title="Чат">
    <ContentPage.Content>
        <StackLayout Padding="10" Spacing="5">
            <CollectionView x:Name="MessagesCollectionView" ItemsSource="{Binding Messages}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="LightGray" Margin="5" Padding="10" CornerRadius="10">
                            <Label Text="{Binding Content}" />
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <StackLayout Orientation="Horizontal" Spacing="5">
                <Entry x:Name="MessageEntry" Placeholder="Введите сообщение" HorizontalOptions="FillAndExpand" />
                <Button Text="Отправить" Clicked="OnSendMessageClicked" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
